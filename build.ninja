cflags = -Wall

rule cc
  command = g++ $cflags -c $in -o $out

rule link
  command = g++ $in -o $out

rule sh
  command = sh -c $COMMAND

build build/main.o: cc src/main.cpp

build build/ArgumentParser/ArgumentParser.o: cc src/ArgumentParser/ArgumentParser.cpp
build build/ArgumentParser/InputOutputFileParser.o: cc src/ArgumentParser/InputOutputFileParser.cpp

build lazy: link build/main.o build/ArgumentParser/ArgumentParser.o build/ArgumentParser/InputOutputFileParser.o
default lazy

build doxygen: sh | lazy
  command = doxygen Doxyfile
