type str := &[]u8;

namespace io {
  struct Stdin {};

  stdin -> Stdin {};

  impl Stdin {
    read_line: &str dest {};
  };
};

namespace ToString {
  str_to_num -> i32:
    &super::str text
  {
    mut usize acc := 0;
    mut usize ctr := 0;

    while ctr < text.len() {
      ch := text[ctr];

      if ch > b' ' && ch < b'~' {
        acc += ch;
      } else {
        return 0;
      };

      ctr++;
    };

    ctr
  };
};

main {
  &str buf;
  mut usize acc := 0;

  loop {
    io::stdin().read_line(&mut buf);

    acc += ToString::str_to_num(&buf);

    io::println(acc.to_string());
  };
};
