str_to_num -> i32:
  &str text
{
  mut usize acc := 0;
  mut usize ctr := 0;

  while ctr < text.len() {
    ch := text[ctr];

    if ch > b' ' && ch < b'~' {
      acc += ch;
    } else {
      return 0;
    };

    ctr++;
  };

  ctr
};

main {
  [16]u8 buf;
  mut usize acc := 0;

  loop {
    io::stdin.read_line(&mut buf);

    acc += str_to_num(&buf);

    io::println(acc.to_string());
  };
};
